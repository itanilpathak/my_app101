<div class="header">This is the customized app developed by ANIL PATHAK
  <div class="header-right">
    <a href="http://localhost:3000">Users</a>
    <a class="active" href="http://localhost:3000/microposts">Posts</a>

    <a href="http://localhost:3000/static_pages/home">Static Page 1</a>
    <a href="http://localhost:3000/static_pages/help">Help</a>
  </div>
</div>
</header>
<div class="form">

  <p id="notice"><%= notice %></p>

  <h1>Microposts</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Content</th>
        <th>User</th>
        <th colspan="3">Operations</th>
      </tr>
    </thead>

    <tbody>
      <% @microposts.each do |micropost| %>
      <tr>
        <td><%= micropost.content %></td>
        <td><%= micropost.user_id %></td>
        <td><%= link_to 'Show', micropost %></td>
        <td><%= link_to 'Edit', edit_micropost_path(micropost) %></td>
        <td><%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Micropost', new_micropost_path %>
  <br>
  <a href="http://localhost:3000/">Users</a>
</div>